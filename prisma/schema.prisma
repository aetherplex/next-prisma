generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @default(autoincrement()) @id
  name  String
  email String @unique
  posts Post[]
}

model Post {
  id        Int     @default(autoincrement()) @id
  title     String
  content   String?
  published Boolean @default(false)
  author_id Int?
  author    User?   @relation(fields: [author_id], references: [id])
}
